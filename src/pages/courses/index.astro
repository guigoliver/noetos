---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../../consts';
import '../../styles/global.css';

// Get all courses
const courses = await getCollection('courses');
---

<BaseLayout title={`Courses | ${SITE_TITLE}`} description="Explore our courses on classical studies and philosophy">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-earth-900 mb-4">Courses</h1>
      <p class="text-xl text-earth-700 max-w-3xl mx-auto">Deepen your understanding of classical wisdom through our curated courses on philosophy, literature, and ancient history.</p>
    </header>
    
    {courses.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {courses.map(course => (
          <div class="card overflow-hidden bg-white">
            <div class="aspect-video relative overflow-hidden">
              {course.data.heroImage ? (
                <img 
                  src={course.data.heroImage} 
                  alt={course.data.title}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center bg-earth-100">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-earth-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
              )}
              
              {course.data.level && (
                <div class="absolute top-3 right-3">
                  <span class={`inline-block px-3 py-1 text-sm font-medium rounded-full
                    ${course.data.level === 'beginner' ? 'bg-sage-100 text-sage-700' : 
                      course.data.level === 'intermediate' ? 'bg-olive-100 text-olive-700' : 
                      'bg-earth-200 text-earth-800'}`}>
                    {course.data.level.charAt(0).toUpperCase() + course.data.level.slice(1)}
                  </span>
                </div>
              )}
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h2 class="text-2xl font-bold text-earth-900">{course.data.title}</h2>
                {course.data.price && (
                  <span class="text-olive-700 font-semibold">{course.data.price}</span>
                )}
              </div>
              <p class="text-earth-700 mb-4">{course.data.description}</p>
              <div class="flex flex-wrap gap-3 mb-6">
                {course.data.duration && (
                  <span class="inline-flex items-center text-sm text-earth-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {course.data.duration}
                  </span>
                )}
              </div>
              <div class="flex justify-between items-center">
                <a href={`/courses/${course.slug}`} class="btn-primary">View Course</a>
                {!course.data.isEnrollmentOpen && (
                  <span class="text-sm text-earth-500 italic">Coming soon</span>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 border border-dashed border-earth-200 rounded-lg bg-earth-50">
        <div class="text-earth-500 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-earth-800 mb-2">Our Courses Are Coming Soon</h2>
        <p class="text-earth-600 mb-6 max-w-lg mx-auto">We're currently developing thoughtful and immersive courses on classical studies and philosophy. Stay tuned for their release!</p>
        
        <!-- Email signup form placeholder -->
        <div class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-2">
            <input type="email" class="flex-grow px-4 py-2 rounded-md border border-earth-300 focus:outline-none focus:ring-2 focus:ring-olive-500" placeholder="Enter your email for updates" />
            <button class="btn-primary whitespace-nowrap">Notify me</button>
          </div>
        </div>
      </div>
    )}
  </section>
</BaseLayout>
